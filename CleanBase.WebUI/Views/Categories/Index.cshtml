@using CleanBase.Application.DTOs
@model IEnumerable<CategoryDTO>

@{
    ViewData["Title"] = "Gerenciador de Categorias";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr/>
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="float-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Register" class="fas fa-plus">Novo Registro</span>
                </a>
            </div>
        </div>
    </div>
</div>
<br/>
<div class="container col-md-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
                            <span class="fas fa-edit">Editar</span>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-info">
                            <span class="fas fa-search">Detalhes</span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-danger">
                            <span class="fas fa-trash-alt">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>